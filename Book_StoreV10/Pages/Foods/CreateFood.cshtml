@page 
@model CoopApp.CreateFoodModel
@{
    ViewData["Title"] = "CreateFood";
}
<style>
h5 {
  text-align: center;
  color:blueviolet
}
</style>

<h5>The number of foods is : @Model.Foods.Count</h5>

<h6 style="color:blue"> Create a new food</h6>
<form class="form-horizontal" method="post">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group" style="width:25%">
        <label asp-for="@Model.Food.ISBN" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Food.ISBN" type="text" class="form-control">
            <span asp-validation-for="@Model.Food.ISBN" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Food.Title" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Food.Title" type="text" class="form-control">
            <span asp-validation-for="@Model.Food.Title" class="text-danger"></span>
        </div>
    </div>
    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Food.ImageName" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Food.ImageName" type="text" class="form-control">
            <span asp-validation-for="@Model.Food.ImageName" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Food.Author" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Food.Author" type="text" class="form-control">
            <span asp-validation-for="@Model.Food.Author" class="text-danger"></span>
        </div>
    </div>

    <div style="width:25%" class="form-group">
        <label asp-for="@Model.Food.Price" class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
            <input asp-for="@Model.Food.Price" type="text" class="form-control">
            <span asp-validation-for="@Model.Food.Price" class="text-danger"></span>
        </div>
    </div>


    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="border-light">
                Add Food
            </button>
        </div>
    </div>
</form>

