@page
@model CoopApp.AdminAllFoodsModel
@{
    ViewData["Title"] = "AdnimMenu";
}

<h1> AllFoods </h1>
<table class="table">
    <thead>
        <tr>
            <th>Title </th>
            <th>Author</th>
            <th>Price</th>
            <th>Image</th>
        </tr>
    </thead>
    <tbody>
        @if (Model.Foods.Count != 0)
        {
            @foreach (var item in Model.Foods)
            {
                <tr>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        @item.Price
                    </td>

                    <td>
                        <p>
                            <a asp-page="/Foods/UpdateFood" asp-route-id="@item.ISBN">Edit</a> |
                            <a asp-page="/Food/DeleteFood" asp-route-id="@item.ISBN">Delete</a>
                        </p>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

