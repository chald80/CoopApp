@page "{ISBN}"
@model CoopApp.UpdateFoodModel

@{ ViewData["Title"] = "UpdateFood"; }

<h1>EditPizza</h1>

<form method="post">
    <div class="form-group">
        <label asp-for="@Model.Food.ISBN" class="control-label"></label>
        <input hidden="hidden" asp-for="@Model.Food.ISBN" class="form-control" />
        <span asp-validation-for="@Model.Food.ISBN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Food.Title" class="control-label"></label>
        <input asp-for="@Model.Food.Title" class="form-control" />
        <span asp-validation-for="@Model.Food.Title" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Food.Price" class="control-label"></label>
        <input asp-for="@Model.Food.Price" class="form-control" />
        <span asp-validation-for="@Model.Food.Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Food.Author" class="control-label"></label>
        <input asp-for="@Model.Food.Author" class="form-control" />
        <span asp-validation-for="@Model.Food.Author" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="@Model.Food.ImageName" class="control-label"></label>
        <input asp-for="@Model.Food.ImageName" class="form-control" />
        <span asp-validation-for="@Model.Food.ImageName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>


